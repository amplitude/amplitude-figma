{
  "name": "@amplitude/figma",
  "version": "1.0.0",
  "keywords": [
    "create-figma-plugin",
    "figma",
    "figma-plugin"
  ],
  "license": "MIT",
  "author": "Kelvin Lu",
  "dependencies": {
    "@create-figma-plugin/ui": "0.0.80",
    "@create-figma-plugin/utilities": "0.0.80",
    "axios": "^0.21.0",
    "preact": "^10.5.7",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "@amplitude/eslint-config-typescript": "^1.1.0",
    "@create-figma-plugin/build": "0.0.80",
    "@create-figma-plugin/tsconfig": "0.0.80",
    "@figma/plugin-typings": "^1.16.1",
    "@types/axios": "^0.14.0",
    "@typescript-eslint/eslint-plugin": "4",
    "eslint": "7",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "husky": ">=4",
    "lint-staged": ">=10"
  },
  "scripts": {
    "build": "build-figma-plugin",
    "watch": "build-figma-plugin --watch",
    "lint": "eslint --cache --fix"
  },
  "figma-plugin": {
    "id": "amp-figma",
    "name": "Amplitude Event Planner",
    "menu": [
      {
        "name": "Create Event Label",
        "main": "src/entries/addEvent.ts",
        "ui": "src/ui.tsx"
      },
      {
        "name": "View or Export Events",
        "main": "src/entries/allEvents.ts",
        "ui": "src/ui.tsx"
      },
      {
        "name": "Settings",
        "main": "src/entries/settings.ts",
        "ui": "src/ui.tsx"
      },
      "-",
      {
        "name": "Tutorial",
        "main": "src/entries/tutorial.ts",
        "ui": "src/ui.tsx"
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  },
  "lint-staged": {
    "*.ts": "yarn lint"
  }
}
